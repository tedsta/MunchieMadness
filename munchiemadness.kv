#:kivy 1.7.2

Root:
    ScrollView:
        BoxLayout:
            orientation: 'vertical'
            padding: 20
            BoxLayout:
                orientation: 'horizontal'
                Label:
                    top: 5
                    text: 'Weird Factor'
                Slider:
                    id: slider
                    max: 0.5
                    value: 0.25
                    #on_value: bar.value = self.value
            Button:
                pos_hint: {'center_x':.5, 'center_y': .5}
                size_hint: 0.7, 1
                text: "Feed Me"
            Label:
                id: 'ingredients'
                font_size: 50
                text: 'Ingredients'
            BoxLayout:
                orientation: 'horizontal'
                CheckBox:
                Label:
                    text: "Cheese"
            BoxLayout:
                orientation: 'horizontal'
                CheckBox:
                Label:
                    text: "Popcorn"
            BoxLayout:
                orientation: 'horizontal'
                CheckBox:
                Label:
                    text: "Turkey"
            BoxLayout:
                orientation: 'horizontal'
                CheckBox:
                Label:
                    text: "Ham"
            BoxLayout:
                orientation: 'horizontal'
                CheckBox:
                Label:
                    text: "Bread"
            BoxLayout:
                orientation: 'horizontal'
                CheckBox:
                Label:
                    text: "Bread"
